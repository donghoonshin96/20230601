package service;

import java.util.List;

import domain.ProductVO;
import repository.DAO;
import repository.ProductDAO;

public class ProductService implements Service {

	private DAO dao;

	public ProductService() {
		dao = new ProductDAO();
	}

	@Override
	public int register(ProductVO pvo) {

		System.out.println(">>> register service 진입!!!");
		return dao.insert(pvo);
	}

	@Override
	public List<ProductVO> list() {
		System.out.println(">>> list service 진입!!!");
		return dao.selectList();
	}

	@Override
	public ProductVO detail(int pno) {
		System.out.println(">>> detail service 진입!!!");
		return dao.selectOne(pno);
	}

	@Override
	public void edit(ProductVO pvo) {
		System.out.println(">>> edit service 진입!!!");
		dao.update(pvo);
	}
	
	@Override
	public void delete(int pno) {
	    System.out.println(">>> delete service 진입!!!");
		dao.remove(pno);
	}


}
